mixin js($filename)
  script[type="text/javascript"][src="/public/js/" +$filename + ".js?ts=" + ts]

mixin css($filename)
  link[rel="stylesheet"][href="/public/css/"+ $filename + ".css?ts=" + ts]

mixin logo
  img[src="/public/logo.png"][width="36"][height="36"][title="Airway Logo"].rounded-lg

mixin avatar($path)
  if $path == ""
    img[src="/public/forum/default_avatar.png"][width="40"][height="40"].rounded-full
  else
    img[src=$path].rounded-full
