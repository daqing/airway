extends layout

block title
  #{Post.Title}

block subtitle
  if Tagline == ""
    | &nbsp;-&nbsp;#{Title}
  else
    | &nbsp;-&nbsp;#{Tagline}

block style
  style
    .post {
      margin-bottom: 60px;
    }

block content
  div.flex.flex-col.items-center.px-2.pt-12.pb-4.mb-4
    h1.font-medium.text-2xl #{Post.Title}
    p.mt-2.text-gray-500.text-sm.font-mono #{PostDate}
  article.px-10.max-w-none#markdown
    #{ContentHTML}
