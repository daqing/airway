extends layout

block title
  #{Title}

block content
  div#posts.mt-10.bg-white.rounded-md.shadow
    each $post in Posts
      div.post.px-4.py-4.border-b.border-zinc-200
        div.flex.gap-4
          img[src="https://l.ruby-china.com/user/avatar/96037/125d0f.jpg!md"].rounded-full

          div
            h2.text-gray-900
              a[href=$post.Url] #{$post.Title}
            span.mt-3.text-gray-400.text-sm #{$post.Date}
