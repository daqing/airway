extends layout

block title
  #{Post.Title}

block subtitle
  if Tagline == ""
    | &nbsp;-&nbsp;#{Title}
  else
    | &nbsp;-&nbsp;#{Tagline}

block content
  article.mt-2.bg-white.rounded-md.shadow
    div.flex.gap-4.p-4.items-center
      +avatar("")
      h1.text-xl #{$.Post.Title}
    main.border-t.border-gray-200.p-4#markdown
      #{ContentHTML}
